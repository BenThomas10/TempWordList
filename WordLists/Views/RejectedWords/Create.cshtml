@model WordLists.Models.RejectedWord

@{
    ViewBag.Title = "Create";
}

@*<h2>Create</h2>*@


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Create Rejected Words</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ListNameId, "List Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-lg-12">
                @Html.DropDownList("ListNameId", null, htmlAttributes: new { @class = "form-control", @enabled = "false"})
                @Html.ValidationMessageFor(model => model.ListNameId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Word, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-lg-12">
                @Html.TextAreaFor(model => model.Word,  new { @class = "form-control", @rows = 10, @cols = 5 })
                @Html.ValidationMessageFor(model => model.Word, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-lg-12">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


